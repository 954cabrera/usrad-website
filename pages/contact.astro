---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
  <fragment slot="title">Contact Us | USRad</fragment>

  <!-- Hero Section -->
  <section
    class="relative bg-gradient-to-b from-[#f5e7c5] to-white py-24 px-6 text-[#0e1b2a] overflow-hidden"
  >
    <div
      class="max-w-7xl mx-auto flex flex-col md:flex-row items-center justify-between gap-12"
    >
      <!-- Text Content -->
      <div class="max-w-xl z-10">
        <h1 class="text-5xl font-semibold mb-6 leading-tight">Contact Us</h1>
        <p class="text-xl text-gray-700 mb-4">
          We’re here to make your imaging experience simple, clear, and
          personal.
        </p>
        <p class="text-xl text-gray-700">
          Reach out anytime — our team is ready to help you every step of the
          way.
        </p>
      </div>

      <!-- Image with Glow -->
      <div class="relative z-10 w-full max-w-md mx-auto">
        <div
          class="absolute -top-12 -left-12 w-80 h-80 bg-[#f5e7c5] rounded-full blur-3xl opacity-40 z-0"
        >
        </div>
        <img
          src="/images/contact-hero.png"
          alt="USRad Contact"
          class="relative z-10 w-full h-auto object-contain"
        />
      </div>
    </div>
  </section>

  <!-- Contact Info Cards -->
  <section class="bg-fade-to-white py-24">
    <div class="max-w-5xl mx-auto px-6">
      <div
        class="grid grid-cols-1 md:grid-cols-3 gap-y-16 md:gap-8 text-center"
      >
        <!-- Card 1 -->
        <div>
          <div class="icon-wrap">
            <svg
              class="icon"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M3 8l9 6 9-6M21 8v8a2 2 0 01-2 2H5a2 2 0 01-2-2V8z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">Email Us</h3>
          <p class="text-gray-600">support@usrad.com</p>
          <a
            href="mailto:support@usrad.com"
            class="text-primary hover:underline inline-block mt-2"
            >Send a Message →</a
          >
        </div>

        <!-- Card 2 -->
        <div>
          <div class="icon-wrap">
            <svg
              class="icon"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M2 8.5V6a2 2 0 012-2h4l2 4-2 4H4a2 2 0 01-2-2v-1.5zM22 15.5V18a2 2 0 01-2 2h-4l-2-4 2-4h4a2 2 0 012 2v1.5z"
              ></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">
            Call Our Team
          </h3>
          <p class="text-gray-600">(800) 555-8723</p>
          <a
            href="tel:8005558723"
            class="text-primary hover:underline inline-block mt-2">Call Now →</a
          >
        </div>

        <!-- Card 3 -->
        <div>
          <div class="icon-wrap">
            <svg
              class="icon"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M12 11c1.657 0 3-1.343 3-3S13.657 5 12 5s-3 1.343-3 3 1.343 3 3 3z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M12 22s8-4.5 8-10a8 8 0 10-16 0c0 5.5 8 10 8 10z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">
            Find a Center
          </h3>
          <p class="text-gray-600">Search imaging locations near you.</p>
          <a
            href="/locations"
            class="text-primary hover:underline inline-block mt-2"
            >Browse Centers →</a
          >
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA Section: Partner Invite -->
  <section class="partner-invite" data-aos="fade-up" data-aos-delay="200">
    <p>
      Are you a medical imaging provider interested in partnering with USRad?
    </p>
    <a href="/partner" class="partner-link">Get Started →</a>
  </section>
</MainLayout>

<style>
  .bg-fade-to-white {
    background: linear-gradient(to bottom, #ffffff 0%, #f9fafb 100%);
  }

  .icon-wrap {
    display: flex;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .icon {
    width: 48px;
    height: 48px;
    color: #e6c378;
  }

  .text-primary {
    color: #e6c378;
  }

  .partner-invite {
    background-color: #f9fafb;
    text-align: center;
    padding: 5rem 2rem;
    font-size: 1.25rem;
    color: #0e1b2a;
  }

  .partner-link {
    display: inline-block;
    margin-top: 1rem;
    font-weight: 600;
    color: #e6c378;
    text-decoration: underline;
    font-size: 1.25rem;
  }

  .partner-link:hover {
    color: #d4b06a;
  }
</style>
