---
import PartnerPageLayout from "../../layouts/PartnerPageLayout.astro";
import AOSInit from "../../components/AOSInit.astro";
---

<style>
  @import url("https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;500;600;700;800&display=swap");

  body,
  html {
    font-family: "Manrope", sans-serif;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: "Manrope", sans-serif;
    font-weight: 600;
  }

  p,
  a,
  button,
  input,
  select,
  textarea {
    font-family: "Manrope", sans-serif;
  }

  .faq-accordion-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-out;
  }

  .faq-accordion-content.active {
    max-height: 1000px;
  }

  .faq-accordion-button .icon-plus {
    display: block;
  }

  .faq-accordion-button .icon-minus {
    display: none;
  }

  .faq-accordion-button.active .icon-plus {
    display: none;
  }

  .faq-accordion-button.active .icon-minus {
    display: block;
  }
</style>

<PartnerPageLayout
  title="Partner FAQs | USRad"
  currentPage="Partner FAQs"
  hideTitle={true}
>
  <AOSInit />

  <!-- Hero Section -->
  <section
    class="relative bg-gradient-to-b from-[#fcf9f0] to-[#f5e7c5] text-[#003087] pt-32 pb-28 px-6 sm:px-12 overflow-hidden"
  >
    <!-- Decorative elements -->
    <div
      class="absolute top-20 right-20 w-64 h-64 rounded-full bg-[#cc9933] opacity-[0.03] blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-20 left-20 w-72 h-72 rounded-full bg-[#003087] opacity-[0.03] blur-3xl"
    >
    </div>

    <div class="max-w-6xl mx-auto relative z-10">
      <div class="text-center">
        <h1
          class="text-5xl sm:text-6xl font-extrabold leading-tight font-manrope text-[#003087]"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          Partner <span class="text-[#cc9933] relative">
            FAQs
            <svg
              class="absolute -bottom-2 left-0 w-full"
              height="6"
              viewBox="0 0 340 6"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M2 3.5C2 3.5 70 0.5 170 3.5C270 6.5 338 3.5 338 3.5"
                stroke="#cc9933"
                stroke-width="4"
                stroke-linecap="round"></path>
            </svg>
          </span>
        </h1>
        <p
          class="mt-8 text-xl text-[#003087] max-w-3xl mx-auto leading-relaxed font-manrope"
          data-aos="fade-up"
          data-aos-delay="200"
        >
          Answers to common questions about joining and partnering with USRad
        </p>
      </div>
    </div>

    <!-- Elegant Wave Divider -->
    <div class="absolute bottom-0 left-0 right-0 overflow-hidden">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 1440 120"
        class="w-full h-auto"
      >
        <path
          fill="#ffffff"
          fill-opacity="1"
          d="M0,64L80,69.3C160,75,320,85,480,80C640,75,800,53,960,48C1120,43,1280,53,1360,58.7L1440,64L1440,120L1360,120C1280,120,1120,120,960,120C800,120,640,120,480,120C320,120,160,120,80,120L0,120Z"
        ></path>
      </svg>
    </div>
  </section>

  <!-- Search & Categories Section -->
  <section class="py-12 bg-white">
    <div class="max-w-5xl mx-auto px-6">
      <!-- Search Bar -->
      <div class="max-w-2xl mx-auto mb-12" data-aos="fade-up">
        <div class="relative">
          <input
            type="text"
            id="faq-search"
            class="w-full border-2 border-gray-300 bg-white h-14 px-5 pr-16 rounded-lg text-lg focus:outline-none focus:border-[#cc9933] transition-colors font-manrope"
            placeholder="Search our FAQs..."
          />
          <button type="submit" class="absolute right-4 top-4">
            <svg
              class="text-[#003087] h-6 w-6"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- FAQ Categories -->
      <div class="mb-12" data-aos="fade-up" data-aos-delay="100">
        <div class="flex flex-wrap justify-center gap-4">
          <button
            class="category-button active px-6 py-3 bg-[#003087] text-white rounded-full font-medium hover:bg-[#002266] transition-colors font-manrope"
            data-category="all"
          >
            All Questions
          </button>
          <button
            class="category-button px-6 py-3 bg-gray-200 text-[#003087] rounded-full font-medium hover:bg-gray-300 transition-colors font-manrope"
            data-category="joining"
          >
            Joining USRad
          </button>
          <button
            class="category-button px-6 py-3 bg-gray-200 text-[#003087] rounded-full font-medium hover:bg-gray-300 transition-colors font-manrope"
            data-category="financial"
          >
            Financial
          </button>
          <button
            class="category-button px-6 py-3 bg-gray-200 text-[#003087] rounded-full font-medium hover:bg-gray-300 transition-colors font-manrope"
            data-category="operations"
          >
            Operations
          </button>
          <button
            class="category-button px-6 py-3 bg-gray-200 text-[#003087] rounded-full font-medium hover:bg-gray-300 transition-colors font-manrope"
            data-category="technical"
          >
            Technical
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Content Section -->
  <section class="py-12 bg-[#f0f4f9]">
    <div class="max-w-5xl mx-auto px-6">
      <div class="space-y-6" data-aos="fade-up">
        <!-- Joining USRad FAQs -->
        <div class="faq-category" data-category="joining">
          <h2 class="text-2xl font-semibold text-[#003087] mb-6 font-manrope">
            Joining USRad
          </h2>

          <!-- FAQ Item 1 -->
          <div class="bg-white rounded-xl shadow-md overflow-hidden mb-4">
            <div class="faq-accordion">
              <button
                class="faq-accordion-button w-full p-6 text-left focus:outline-none flex justify-between items-center"
              >
                <h3 class="text-xl font-semibold text-[#003087] font-manrope">
                  What is the process to join USRad?
                </h3>
                <div class="flex-shrink-0 ml-4">
                  <svg
                    class="icon-plus w-6 h-6 text-[#003087]"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                  <svg
                    class="icon-minus w-6 h-6 text-[#003087]"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M18 12H6"></path>
                  </svg>
                </div>
              </button>
              <div class="faq-accordion-content">
                <div class="p-6 pt-0 border-t border-gray-200">
                  <p class="text-gray-700 font-manrope">
                    The process is straightforward and designed to be minimal
                    disruption:
                  </p>
                  <ol
                    class="list-decimal pl-8 mt-2 mb-4 space-y-2 text-gray-700 font-manrope"
                  >
                    <li>
                      Schedule an initial consultation with our partnership team
                    </li>
                    <li>Complete a simple partnership agreement</li>
                    <li>
                      Provide basic information about your center's capabilities
                      and available appointment slots
                    </li>
                    <li>
                      Participate in a brief training session for your staff
                    </li>
                    <li>Begin receiving patients</li>
                  </ol>
                  <p class="text-gray-700 font-manrope">
                    Most centers complete the entire process and start receiving
                    patients within 2-3 weeks of their initial consultation.
                  </p>
                  <div class="mt-4">
                    <a
                      href="/partner/implementation"
                      class="text-[#003087] hover:text-[#cc9933] font-medium transition-colors font-manrope"
                    >
                      View our detailed implementation process â†’
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- FAQ Item 2 -->
          <div class="bg-white rounded-xl shadow-md overflow-hidden mb-4">
            <div class="faq-accordion">
              <button
                class="faq-accordion-button w-full p-6 text-left focus:outline-none flex justify-between items-center"
              >
                <h3 class="text-xl font-semibold text-[#003087] font-manrope">
                  What are the requirements to join the USRad network?
                </h3>
                <div class="flex-shrink-0 ml-4">
                  <svg
                    class="icon-plus w-6 h-6 text-[#003087]"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                  <svg
                    class="icon-minus w-6 h-6 text-[#003087]"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M18 12H6"></path>
                  </svg>
                </div>
              </button>
              <div class="faq-accordion-content">
                <div class="p-6 pt-0 border-t border-gray-200">
                  <p class="text-gray-700 font-manrope">
                    We maintain high standards for our partner centers to ensure
                    quality care for patients. Requirements include:
                  </p>
                  <ul
                    class="list-disc pl-8 mt-2 mb-4 space-y-2 text-gray-700 font-manrope"
                  >
                    <li>
                      ACR accreditation for all imaging modalities offered
                    </li>
                    <li>
                      Board-certified radiologists interpreting all studies
                    </li>
                    <li>
                      Proper licensing and certifications for your state/region
                    </li>
                    <li>Modern, well-maintained imaging equipment</li>
                    <li>Digital image storage and transmission capabilities</li>
                    <li>Commitment to excellent patient experience</li>
                  </ul>
                  <p class="text-gray-700 font-manrope">
                    Most established imaging centers already meet these
                    requirements. Our partnership team can help determine if
                    your center qualifies during the initial consultation.
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- FAQ Item 3 -->
          <div class="bg-white rounded-xl shadow-md overflow-hidden mb-4">
            <div class="faq-accordion">
              <button
                class="faq-accordion-button w-full p-6 text-left focus:outline-none flex justify-between items-center"
              >
                <h3 class="text-xl font-semibold text-[#003087] font-manrope">
                  Are there any costs involved in joining USRad?
                </h3>
                <div class="flex-shrink-0 ml-4">
                  <svg
                    class="icon-plus w-6 h-6 text-[#003087]"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                  <svg
                    class="icon-minus w-6 h-6 text-[#003087]"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M18 12H6"></path>
                  </svg>
                </div>
              </button>
              <div class="faq-accordion-content">
                <div class="p-6 pt-0 border-t border-gray-200">
                  <p class="text-gray-700 font-manrope">
                    No. Joining the USRad network is completely free. There are:
                  </p>
                  <ul
                    class="list-disc pl-8 mt-2 mb-4 space-y-2 text-gray-700 font-manrope"
                  >
                    <li>No signup or onboarding fees</li>
                    <li>No monthly membership charges</li>
                    <li>No technology or implementation costs</li>
                    <li>No minimum volume requirements</li>
                  </ul>
                  <p class="text-gray-700 font-manrope">
                    Our business model is based on mutual successâ€”we only
                    generate revenue when we successfully bring patients to your
                    center. Our partnership is designed to be risk-free for
                    imaging centers.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Financial FAQs -->
        <div class="faq-category" data-category="financial">
          <h2 class="text-2xl font-semibold text-[#003087] mb-6 font-manrope">
            Financial Questions
          </h2>

          <!-- FAQ Item 4 -->
          <div class="bg-white rounded-xl shadow-md overflow-hidden mb-4">
            <div class="faq-accordion">
              <button
                class="faq-accordion-button w-full p-6 text-left focus:outline-none flex justify-between items-center"
              >
                <h3 class="text-xl font-semibold text-[#003087] font-manrope">
                  What are the reimbursement rates for USRad patients?
                </h3>
                <div class="flex-shrink-0 ml-4">
                  <svg
                    class="icon-plus w-6 h-6 text-[#003087]"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                  <svg
                    class="icon-minus w-6 h-6 text-[#003087]"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M18 12H6"></path>
                  </svg>
                </div>
              </button>
              <div class="faq-accordion-content">
                <div class="p-6 pt-0 border-t border-gray-200">
                  <p class="text-gray-700 font-manrope">
                    Our reimbursement rates are designed to be competitive and
                    profitable for our partners. Rates are typically based on
                    Medicare allowable amounts, adjusted for your specific
                    market.
                  </p>
                  <p class="text-gray-700 mt-3 font-manrope">
                    While these rates may be lower than some commercial
                    insurance reimbursements, they represent pure incremental
                    revenue for otherwise unused appointment slots, with zero
                    administrative overhead and no risk of denials or payment
                    delays.
                  </p>
                  <p class="text-gray-700 mt-3 font-manrope">
                    During your consultation, our partnership team will discuss
                    specific rates for your market and modalities. All rates are
                    transparent and fixedâ€”there are no surprises or hidden
                    adjustments.
                  </p>
                  <div class="mt-4">
                    <a
                      href="/partner/model"
                      class="text-[#003087] hover:text-[#cc9933] font-medium transition-colors font-manrope"
                    >
                      Learn more about our financial model â†’
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- FAQ Item 5 -->
          <div class="bg-white rounded-xl shadow-md overflow-hidden mb-4">
            <div class="faq-accordion">
              <button
                class="faq-accordion-button w-full p-6 text-left focus:outline-none flex justify-between items-center"
              >
                <h3 class="text-xl font-semibold text-[#003087] font-manrope">
                  How and when will we receive payment?
                </h3>
                <div class="flex-shrink-0 ml-4">
                  <svg
                    class="icon-plus w-6 h-6 text-[#003087]"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                  <svg
                    class="icon-minus w-6 h-6 text-[#003087]"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M18 12H6"></path>
                  </svg>
                </div>
              </button>
              <div class="faq-accordion-content">
                <div class="p-6 pt-0 border-t border-gray-200">
                  <p class="text-gray-700 font-manrope">
                    USRad guarantees payment within 15 days of service. Payment
                    is made via your preferred method:
                  </p>
                  <ul
                    class="list-disc pl-8 mt-2 mb-4 space-y-2 text-gray-700 font-manrope"
                  >
                    <li>Direct ACH deposit to your account (most common)</li>
                    <li>Electronic funds transfer</li>
                    <li>Check payment (if preferred)</li>
                  </ul>
                  <p class="text-gray-700 font-manrope">
                    Payments are batched and processed twice per month, with
                    detailed reporting for each payment that clearly shows which
                    services are being reimbursed. Our payment system eliminates
                    the lengthy payment cycles, claim denials, and
                    administrative burdens associated with traditional
                    insurance.
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- FAQ Item 6 -->
          <div class="bg-white rounded-xl shadow-md overflow-hidden mb-4">
            <div class="faq-accordion">
              <button
                class="faq-accordion-button w-full p-6 text-left focus:outline-none flex justify-between items-center"
              >
                <h3 class="text-xl font-semibold text-[#003087] font-manrope">
                  Is there a minimum volume or revenue requirement?
                </h3>
                <div class="flex-shrink-0 ml-4">
                  <svg
                    class="icon-plus w-6 h-6 text-[#003087]"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                  <svg
                    class="icon-minus w-6 h-6 text-[#003087]"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M18 12H6"></path>
                  </svg>
                </div>
              </button>
              <div class="faq-accordion-content">
                <div class="p-6 pt-0 border-t border-gray-200">
                  <p class="text-gray-700 font-manrope">
                    No. There are no minimum volume requirements or revenue
                    guarantees. You maintain complete control over how many
                    USRad patients you accept and when you accept them.
                  </p>
                  <p class="text-gray-700 mt-3 font-manrope">
                    Our goal is to provide a steady stream of patients to help
                    fill your unused capacity, but we understand that needs vary
                    by center and can change over time. You can adjust your
                    availability at any time through our partner portal or by
                    contacting your Partner Success Manager.
                  </p>
                  <p class="text-gray-700 mt-3 font-manrope">
                    Most partners find that as they become comfortable with the
                    USRad process, they gradually increase their availability to
                    maximize the revenue opportunity.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Operations FAQs -->
        <div class="faq-category" data-category="operations">
          <h2 class="text-2xl font-semibold text-[#003087] mb-6 font-manrope">
            Operational Questions
          </h2>

          <!-- FAQ Item 7 -->
          <div class="bg-white rounded-xl shadow-md overflow-hidden mb-4">
            <div class="faq-accordion">
              <button
                class="faq-accordion-button w-full p-6 text-left focus:outline-none flex justify-between items-center"
              >
                <h3 class="text-xl font-semibold text-[#003087] font-manrope">
                  How does the scheduling process work?
                </h3>
                <div class="flex-shrink-0 ml-4">
                  <svg
                    class="icon-plus w-6 h-6 text-[#003087]"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                  <svg
                    class="icon-minus w-6 h-6 text-[#003087]"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M18 12H6"></path>
                  </svg>
                </div>
              </button>
              <div class="faq-accordion-content">
                <div class="p-6 pt-0 border-t border-gray-200">
                  <p class="text-gray-700 font-manrope">
                    Our scheduling process is designed to be as seamless as
                    possible:
                  </p>
                  <ol
                    class="list-decimal pl-8 mt-2 mb-4 space-y-2 text-gray-700 font-manrope"
                  >
                    <li>
                      You provide your available appointment slots (which you
                      can update at any time)
                    </li>
                    <li>
                      Patients book appointments through our platform and make
                      upfront payment
                    </li>
                    <li>
                      You receive the appointment details through your preferred
                      method (fax, email, or portal)
                    </li>
                    <li>The patient arrives for their scheduled appointment</li>
                    <li>You perform the service as you normally would</li>
                    <li>Payment is processed within 15 days</li>
                  </ol>
                  <p class="text-gray-700 font-manrope">
                    USRad handles all patient scheduling, payment collection,
                    and any rebooking or cancellations. Your team simply
                    receives the order and performs the serviceâ€”we take care of
                    everything else.
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- FAQ Item 8 -->
          <div class="bg-white rounded-xl shadow-md overflow-hidden mb-4">
            <div class="faq-accordion">
              <button
                class="faq-accordion-button w-full p-6 text-left focus:outline-none flex justify-between items-center"
              >
                <h3 class="text-xl font-semibold text-[#003087] font-manrope">
                  How much control do we have over our schedule and
                  availability?
                </h3>
                <div class="flex-shrink-0 ml-4">
                  <svg
                    class="icon-plus w-6 h-6 text-[#003087]"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                  <svg
                    class="icon-minus w-6 h-6 text-[#003087]"
                    xmlns="http://www.w3.org/2000/svg"
