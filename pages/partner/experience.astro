---
import PartnerPageLayout from "../../layouts/PartnerPageLayout.astro";
import AOSInit from "../../components/AOSInit.astro";
---

<style>
  @import url("https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;500;600;700;800&display=swap");

  body,
  html {
    font-family: "Manrope", sans-serif;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: "Manrope", sans-serif;
    font-weight: 600;
  }

  p,
  a,
  button,
  input,
  select,
  textarea {
    font-family: "Manrope", sans-serif;
  }

  .quote-mark {
    font-size: 5rem;
    line-height: 0;
    position: absolute;
    top: 2.5rem;
    left: -1.5rem;
    color: rgba(204, 153, 51, 0.15);
  }

  .timeline-connector {
    position: absolute;
    left: 40px;
    top: 70px;
    bottom: 0;
    width: 2px;
    background: linear-gradient(
      to bottom,
      #e6c378 0%,
      rgba(230, 195, 120, 0.2) 100%
    );
  }
</style>

<PartnerPageLayout
  title="Experience | USRad"
  currentPage="Experience"
  hideTitle={true}
>
  <AOSInit />

  <!-- Hero Section -->
  <section
    class="relative bg-gradient-to-b from-[#fcf9f0] to-[#f5e7c5] text-[#003087] pt-32 pb-28 px-6 sm:px-12 overflow-hidden"
  >
    <!-- Decorative elements -->
    <div
      class="absolute top-20 right-20 w-64 h-64 rounded-full bg-[#cc9933] opacity-[0.03] blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-20 left-20 w-72 h-72 rounded-full bg-[#003087] opacity-[0.03] blur-3xl"
    >
    </div>

    <div class="max-w-6xl mx-auto relative z-10">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div data-aos="fade-right" data-aos-delay="100">
          <h1
            class="text-5xl sm:text-6xl font-extrabold leading-tight font-manrope text-[#003087]"
          >
            Pioneering <span class="text-[#cc9933] relative">
              Experience
              <svg
                class="absolute -bottom-2 left-0 w-full"
                height="6"
                viewBox="0 0 340 6"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M2 3.5C2 3.5 70 0.5 170 3.5C270 6.5 338 3.5 338 3.5"
                  stroke="#cc9933"
                  stroke-width="4"
                  stroke-linecap="round"></path>
              </svg>
            </span>
          </h1>
          <p class="mt-8 text-xl text-[#003087] leading-relaxed font-manrope">
            The USRad leadership team brings unparalleled experience in building
            and scaling nationwide imaging networks, having pioneered the first
            workers' compensation marketplace of its kind.
          </p>
        </div>
        <div class="relative" data-aos="fade-left" data-aos-delay="200">
          <img
            src="/images/michael.jpg"
            alt="Leadership Team"
            class="rounded-xl shadow-xl w-full h-auto"
          />
          <div
            class="absolute -bottom-4 -left-4 w-24 h-24 rounded-full bg-[#e6c378] opacity-20"
          >
          </div>
        </div>
      </div>
    </div>

    <!-- Elegant Wave Divider -->
    <div class="absolute bottom-0 left-0 right-0 overflow-hidden">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 1440 120"
        class="w-full h-auto"
      >
        <path
          fill="#ffffff"
          fill-opacity="1"
          d="M0,64L80,69.3C160,75,320,85,480,80C640,75,800,53,960,48C1120,43,1280,53,1360,58.7L1440,64L1440,120L1360,120C1280,120,1120,120,960,120C800,120,640,120,480,120C320,120,160,120,80,120L0,120Z"
        ></path>
      </svg>
    </div>
  </section>

  <!-- Our Journey Section -->
  <section class="py-24 bg-white text-[#003087] relative overflow-hidden">
    <div class="px-6 sm:px-8 lg:px-12">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16" data-aos="fade-up">
          <h2
            class="text-4xl font-semibold text-[#003087] inline-flex items-center justify-center font-manrope"
          >
            <span class="w-2 h-10 bg-[#cc9933] rounded-full mr-3"></span>
            Our Journey
          </h2>
          <p class="mt-6 text-xl text-gray-700 max-w-3xl mx-auto font-manrope">
            A legacy of innovation and success in diagnostic imaging networks
          </p>
        </div>

        <!-- Timeline Component -->
        <div class="relative" data-aos="fade-up" data-aos-delay="100">
          <!-- Timeline entries -->
          <div class="space-y-16 relative">
            <div class="timeline-connector"></div>

            <!-- Timeline Entry 1 -->
            <div class="grid grid-cols-12 gap-8 items-start relative">
              <div class="col-span-1 relative">
                <div
                  class="w-20 h-20 rounded-full bg-[#003087] flex items-center justify-center text-white font-manrope font-bold text-xl"
                >
                  2003
                </div>
              </div>
              <div class="col-span-11 bg-[#f8f2e1] p-8 rounded-xl shadow-md">
                <h3
                  class="text-2xl font-semibold text-[#003087] mb-4 font-manrope"
                >
                  Establishing the Vision
                </h3>
                <p class="text-lg text-gray-700 font-manrope">
                  Michael Cabrera founded the first nationwide diagnostic
                  imaging network focused on workers' compensation, identifying
                  a critical gap in the market for transparent, affordable
                  imaging services.
                </p>
              </div>
            </div>

            <!-- Timeline Entry 2 -->
            <div class="grid grid-cols-12 gap-8 items-start relative">
              <div class="col-span-1 relative">
                <div
                  class="w-20 h-20 rounded-full bg-[#003087] flex items-center justify-center text-white font-manrope font-bold text-xl"
                >
                  2007
                </div>
              </div>
              <div class="col-span-11 bg-[#f8f2e1] p-8 rounded-xl shadow-md">
                <h3
                  class="text-2xl font-semibold text-[#003087] mb-4 font-manrope"
                >
                  Network Growth
                </h3>
                <p class="text-lg text-gray-700 font-manrope">
                  Expanded to over 400 imaging centers nationwide, developing
                  proprietary scheduling and referral technology that became the
                  industry standard for workers' compensation imaging networks.
                </p>
              </div>
            </div>

            <!-- Timeline Entry 3 -->
            <div class="grid grid-cols-12 gap-8 items-start relative">
              <div class="col-span-1 relative">
                <div
                  class="w-20 h-20 rounded-full bg-[#003087] flex items-center justify-center text-white font-manrope font-bold text-xl"
                >
                  2012
                </div>
              </div>
              <div class="col-span-11 bg-[#f8f2e1] p-8 rounded-xl shadow-md">
                <h3
                  class="text-2xl font-semibold text-[#003087] mb-4 font-manrope"
                >
                  Industry Recognition
                </h3>
                <p class="text-lg text-gray-700 font-manrope">
                  Achieved 1,236% growth, placing the company among the
                  fastest-growing healthcare networks in the United States.
                  Recognized for pioneering cost transparency and quality
                  standards in diagnostic imaging.
                </p>
              </div>
            </div>

            <!-- Timeline Entry 4 -->
            <div class="grid grid-cols-12 gap-8 items-start relative">
              <div class="col-span-1 relative">
                <div
                  class="w-20 h-20 rounded-full bg-[#003087] flex items-center justify-center text-white font-manrope font-bold text-xl"
                >
                  2015
                </div>
              </div>
              <div class="col-span-11 bg-[#f8f2e1] p-8 rounded-xl shadow-md">
                <h3
                  class="text-2xl font-semibold text-[#003087] mb-4 font-manrope"
                >
                  Acquisition & Leadership
                </h3>
                <p class="text-lg text-gray-700 font-manrope">
                  Network acquired by a public company after reaching 1,200+
                  imaging centers nationwide. Michael Cabrera continued in
                  leadership, overseeing integration and expansion of the
                  network.
                </p>
              </div>
            </div>

            <!-- Timeline Entry 5 -->
            <div class="grid grid-cols-12 gap-8 items-start relative">
              <div class="col-span-1 relative">
                <div
                  class="w-20 h-20 rounded-full bg-[#e6c378] flex items-center justify-center text-[#003087] font-manrope font-bold text-xl"
                >
                  2024
                </div>
              </div>
              <div
                class="col-span-11 bg-[#f0f4f9] p-8 rounded-xl shadow-md border-l-4 border-[#cc9933]"
              >
                <h3
                  class="text-2xl font-semibold text-[#003087] mb-4 font-manrope"
                >
                  USRad Launch
                </h3>
                <p class="text-lg text-gray-700 font-manrope">
                  Bringing decades of experience to a new mission: creating the
                  premier network for self-pay and high-deductible patients
                  seeking affordable, high-quality imaging services. USRad
                  combines proven network-building expertise with cutting-edge
                  technology to serve the growing market of cost-conscious
                  healthcare consumers.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Leadership Expertise Section -->
  <section class="py-24 bg-[#f0f4f9] text-[#003087] relative overflow-hidden">
    <!-- Decorative elements -->
    <div
      class="absolute top-20 right-20 w-64 h-64 rounded-full bg-[#cc9933] opacity-[0.03] blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-20 left-20 w-72 h-72 rounded-full bg-[#003087] opacity-[0.03] blur-3xl"
    >
    </div>

    <div class="px-6 sm:px-8 lg:px-12">
      <div class="max-w-7xl mx-auto relative z-10">
        <div class="text-center mb-16" data-aos="fade-up">
          <h2
            class="text-4xl font-semibold text-[#003087] inline-flex items-center justify-center font-manrope"
          >
            <span class="w-2 h-10 bg-[#cc9933] rounded-full mr-3"></span>
            Leadership Expertise
          </h2>
          <p class="mt-6 text-xl text-gray-700 max-w-3xl mx-auto font-manrope">
            The team behind USRad brings specialized knowledge in building
            successful imaging networks
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-12">
          <!-- Michael's Profile -->
          <div
            class="bg-white p-10 rounded-xl shadow-lg"
            data-aos="fade-right"
            data-aos-delay="100"
          >
            <div
              class="flex flex-col sm:flex-row items-center sm:items-start gap-6"
            >
              <img
                src="/images/michael.jpg"
                alt="Michael Cabrera"
                class="w-32 h-32 rounded-full object-cover shadow-md"
              />
              <div>
                <h3 class="text-2xl font-semibold text-[#003087] font-manrope">
                  Michael Cabrera
                </h3>
                <p class="text-lg text-[#cc9933] font-manrope">Founder & CEO</p>
                <p class="mt-4 text-gray-700 font-manrope">
                  With over 25 years transforming diagnostic imaging, Michael
                  led one of the fastest-growing healthcare networks in the U.S.
                  — achieving 1,236% growth before its acquisition by a public
                  company. He's a graduate of the elite "Birthing of Giants"
                  program, co-created by MIT, Inc. Magazine, and EO.
                </p>
              </div>
            </div>
          </div>

          <!-- Donna's Profile -->
          <div
            class="bg-white p-10 rounded-xl shadow-lg"
            data-aos="fade-left"
            data-aos-delay="200"
          >
            <div
              class="flex flex-col sm:flex-row items-center sm:items-start gap-6"
            >
              <img
                src="/images/donna.jpg"
                alt="Donna Cabrera"
                class="w-32 h-32 rounded-full object-cover shadow-md"
              />
              <div>
                <h3 class="text-2xl font-semibold text-[#003087] font-manrope">
                  Donna Cabrera
                </h3>
                <p class="text-lg text-[#cc9933] font-manrope">
                  Co-Founder & Patient Advocacy Advisor
                </p>
                <p class="mt-4 text-gray-700 font-manrope">
                  Donna brings decades of experience in operations, patient
                  services, and medical compliance. Her leadership was
                  instrumental in growing the previous imaging network to 1,200+
                  centers while maintaining exceptional quality standards and
                  patient satisfaction.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Executive Quote Section -->
  <section class="py-24 bg-white">
    <div class="max-w-5xl mx-auto px-6">
      <div
        class="bg-[#003087] p-12 rounded-xl shadow-xl relative"
        data-aos="fade-up"
      >
        <div class="relative z-10">
          <div class="quote-mark font-serif">"</div>
          <blockquote
            class="text-white text-2xl font-light leading-relaxed ml-4 font-manrope"
          >
            Having built a nationwide imaging network before, we understand what
            centers need to succeed. USRad is designed based on those insights,
            creating a model that truly benefits both imaging providers and
            patients. We're not just optimizing unused capacity—we're
            reimagining how imaging services are accessed and delivered.
            <footer class="mt-6 text-[#cc9933] text-lg font-manrope">
              — Michael Cabrera, Founder & CEO
            </footer>
          </blockquote>
        </div>
        <div
          class="absolute bottom-0 right-0 w-36 h-36 bg-[#cc9933] opacity-10 rounded-tl-full"
        >
        </div>
      </div>
    </div>
  </section>

  <!-- Industry Recognition -->
  <section class="py-24 bg-[#f0f4f9] text-[#003087] relative overflow-hidden">
    <div class="px-6 sm:px-8 lg:px-12">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16" data-aos="fade-up">
          <h2
            class="text-4xl font-semibold text-[#003087] inline-flex items-center justify-center font-manrope"
          >
            <span class="w-2 h-10 bg-[#cc9933] rounded-full mr-3"></span>
            Industry Recognition
          </h2>
          <p class="mt-6 text-xl text-gray-700 max-w-3xl mx-auto font-manrope">
            Our team's achievements in the diagnostic imaging industry
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <!-- Recognition 1 -->
          <div
            class="bg-white p-8 rounded-xl shadow-md hover:shadow-lg transition-duration-300 border-t-4 border-[#cc9933]"
            data-aos="fade-up"
            data-aos-delay="100"
          >
            <div class="text-center">
              <div
                class="w-16 h-16 mx-auto bg-[#003087] rounded-full flex items-center justify-center mb-4"
              >
                <svg
                  class="w-8 h-8 text-white"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <h3
                class="text-xl font-semibold text-[#003087] mb-3 font-manrope"
              >
                Inc. 5000
              </h3>
              <p class="text-gray-700 font-manrope">
                Previous imaging network recognized as one of America's
                fastest-growing private companies, with 1,236% growth over three
                years.
              </p>
            </div>
          </div>

          <!-- Recognition 2 -->
          <div
            class="bg-white p-8 rounded-xl shadow-md hover:shadow-lg transition-duration-300 border-t-4 border-[#cc9933]"
            data-aos="fade-up"
            data-aos-delay="200"
          >
            <div class="text-center">
              <div
                class="w-16 h-16 mx-auto bg-[#003087] rounded-full flex items-center justify-center mb-4"
              >
                <svg
                  class="w-8 h-8 text-white"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                  ></path>
                </svg>
              </div>
              <h3
                class="text-xl font-semibold text-[#003087] mb-3 font-manrope"
              >
                MIT Enterprise Forum
              </h3>
              <p class="text-gray-700 font-manrope">
                Leadership team participated in the exclusive "Birthing of
                Giants" program co-created by MIT, Inc. Magazine, and
                Entrepreneurs' Organization.
              </p>
            </div>
          </div>

          <!-- Recognition 3 -->
          <div
            class="bg-white p-8 rounded-xl shadow-md hover:shadow-lg transition-duration-300 border-t-4 border-[#cc9933]"
            data-aos="fade-up"
            data-aos-delay="300"
          >
            <div class="text-center">
              <div
                class="w-16 h-16 mx-auto bg-[#003087] rounded-full flex items-center justify-center mb-4"
              >
                <svg
                  class="w-8 h-8 text-white"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"
                  ></path>
                  import MainLayout from "../../layouts/MainLayout.astro"; Industry
                  Innovation Award
                </svg>
                <p class="text-gray-700 font-manrope">
                  Pioneered transparent pricing in diagnostic imaging, earning
                  recognition for innovation in healthcare accessibility and
                  cost containment.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- CTA Section -->
    <section
      class="bg-[#003087] text-white py-16 px-6 sm:px-12 relative overflow-hidden"
    >
      <div
        class="absolute inset-0 bg-repeat opacity-[0.03]"
        style="background-image: url('/images/subtle-pattern.svg');"
      >
      </div>
      <div
        class="absolute top-20 right-20 w-64 h-64 rounded-full bg-[#cc9933] opacity-[0.1] blur-3xl"
      >
      </div>
      <div
        class="absolute bottom-20 left-20 w-72 h-72 rounded-full bg-white opacity-[0.05] blur-3xl"
      >
      </div>

      <div
        class="max-w-5xl mx-auto relative z-10 text-center"
        data-aos="fade-up"
      >
        <h2 class="text-3xl font-semibold mb-6 font-manrope">
          Join the Network Built by Industry Pioneers
        </h2>
        <p class="text-xl mb-10 max-w-3xl mx-auto font-manrope">
          Leverage our team's proven experience in creating successful imaging
          networks. USRad combines decades of industry knowledge with
          cutting-edge technology to benefit both imaging centers and patients.
        </p>
        <a
          href="/partner/schedule"
          class="inline-block px-8 py-4 bg-[#cc9933] text-[#003087] font-bold rounded-full hover:bg-[#e6c378] transition-all duration-300 hover:shadow-xl font-manrope"
        >
          Schedule a Consultation
        </a>
      </div>
    </section>
  </section>
</PartnerPageLayout>
