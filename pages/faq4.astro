<!-- CSS Variables for Colors -->
<style>
  :root {
    --color-navy-500: #1e3a8a;
    --color-navy-600: #1e40af;
    --color-navy-700: #1e3a8a;
    --color-navy-800: #1e3b8a;
    --color-gold-100: #fef9c3;
    --color-gold-500: #eab308;
    --color-gold-600: #ca8a04;
  }

  /* Basic Text Colors */
  .text-navy-600 {
    color: var(--color-navy-600);
  }
  .text-navy-700 {
    color: var(--color-navy-700);
  }
  .text-navy-800 {
    color: var(--color-navy-800);
  }
  .text-gold-100 {
    color: var(--color-gold-100);
  }
  .text-gold-600 {
    color: var(--color-gold-600);
  }

  /* Background Colors */
  .bg-navy-600 {
    background-color: var(--color-navy-600);
  }
  .bg-navy-700 {
    background-color: var(--color-navy-700);
  }
  .bg-gold-500 {
    background-color: var(--color-gold-500);
  }

  /* Border Colors */
  .border-navy-500 {
    border-color: var(--color-navy-500);
  }
  .border-gold-500 {
    border-color: var(--color-gold-500);
  }

  /* Hover States */
  .hover\:bg-navy-700:hover {
    background-color: var(--color-navy-700);
  }
  .hover\:text-navy-800:hover {
    color: var(--color-navy-800);
  }
  .hover\:text-gold-100:hover {
    color: var(--color-gold-100);
  }

  /* Focus States */
  .focus\:border-navy-500:focus {
    border-color: var(--color-navy-500);
  }
  .focus\:ring-navy-500:focus {
    --tw-ring-color: var(--color-navy-500);
  }
  .focus\:ring-offset-2:focus {
    --tw-ring-offset-width: 2px;
  }

  /* Font Family */
  .font-manrope {
    font-family: "Manrope", sans-serif;
  }

  /* New styles for sticky footer */
  .min-h-screen {
    min-height: 100vh;
  }

  .flex-col {
    display: flex;
    flex-direction: column;
  }

  .flex-grow {
    flex-grow: 1;
  }

  /* Background pattern animation */
  .bg-pattern {
    animation: pattern-shift 60s linear infinite;
  }

  @keyframes pattern-shift {
    0% {
      background-position: 0% 0%;
    }
    100% {
      background-position: 100% 100%;
    }
  }
</style>

<!-- FAQ JavaScript -->
<script>
  // Tab functionality
  document.addEventListener("DOMContentLoaded", function () {
    const tabButtons = document.querySelectorAll(".tab-button");
    const tabContents = document.querySelectorAll(".tab-content");

    tabButtons.forEach((button) => {
      button.addEventListener("click", () => {
        // Remove active class from all buttons and content
        tabButtons.forEach((btn) =>
          btn.classList.remove("active", "border-gold-500", "text-navy-700")
        );
        tabButtons.forEach((btn) =>
          btn.classList.add("border-transparent", "text-gray-500")
        );
        tabContents.forEach((content) => content.classList.add("hidden"));

        // Add active class to clicked button
        button.classList.add("active", "border-gold-500", "text-navy-700");
        button.classList.remove("border-transparent", "text-gray-500");

        // Show corresponding content
        const targetId = button.getAttribute("data-target");
        document.getElementById(targetId).classList.remove("hidden");
      });
    });

    // Procedure details toggles
    const detailToggles = document.querySelectorAll(
      ".procedure-details-toggle"
    );
    detailToggles.forEach((toggle) => {
      toggle.addEventListener("click", () => {
        const targetId = toggle.getAttribute("data-target");
        const targetElement = document.getElementById(targetId);

        if (targetElement.classList.contains("hidden")) {
          targetElement.classList.remove("hidden");
          toggle.querySelector("svg").innerHTML =
            '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 12H6" />';
        } else {
          targetElement.classList.add("hidden");
          toggle.querySelector("svg").innerHTML =
            '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />';
        }
      });
    });

    // Preparation toggles
    const prepToggles = document.querySelectorAll(".preparation-toggle");
    prepToggles.forEach((toggle) => {
      toggle.addEventListener("click", () => {
        const targetId = toggle.getAttribute("data-target");
        const targetElement = document.getElementById(targetId);

        if (targetElement.classList.contains("hidden")) {
          targetElement.classList.remove("hidden");
          toggle.querySelector("svg").innerHTML =
            '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 12H6" />';
        } else {
          targetElement.classList.add("hidden");
          toggle.querySelector("svg").innerHTML =
            '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />';
        }
      });
    });

    // Search functionality
    const searchInput = document.getElementById("faq-search");
    searchInput.addEventListener("input", () => {
      const searchTerm = searchInput.value.toLowerCase();
      const allQuestions = document.querySelectorAll(".bg-white.rounded-xl");

      allQuestions.forEach((question) => {
        const questionText = question
          .querySelector("h3")
          .textContent.toLowerCase();
        const answerText = question
          .querySelector(".text-gray-600")
          .textContent.toLowerCase();

        if (
          questionText.includes(searchTerm) ||
          answerText.includes(searchTerm)
        ) {
          question.style.display = "block";
        } else {
          question.style.display = "none";
        }
      });

      // Show appropriate tab if search is active
      if (searchTerm.length > 0) {
        tabContents.forEach((content) => content.classList.remove("hidden"));
      } else {
        // Reset to default view
        tabContents.forEach((content) => content.classList.add("hidden"));
        document.getElementById("general").classList.remove("hidden");

        // Reset active tab styling
        tabButtons.forEach((btn) =>
          btn.classList.remove("active", "border-gold-500", "text-navy-700")
        );
        tabButtons.forEach((btn) =>
          btn.classList.add("border-transparent", "text-gray-500")
        );
        tabButtons[0].classList.add(
          "active",
          "border-gold-500",
          "text-navy-700"
        );
        tabButtons[0].classList.remove("border-transparent", "text-gray-500");
      }
    });

    // Video triggers
    const videoTriggers = document.querySelectorAll(".video-trigger");
    videoTriggers.forEach((trigger) => {
      trigger.addEventListener("click", (e) => {
        e.preventDefault();
        alert("Video player would open here in the production version.");
      });
    });
  });
</script>
