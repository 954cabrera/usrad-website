---
// src/components/PlaceholderPage.astro
export interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  ctaLink?: string;
  ctaText?: string;
  comingSoon?: boolean;
}

const {
  title,
  subtitle = "Coming Soon",
  description = "We're currently developing this section of our website. Please check back soon for updates.",
  ctaLink = "/",
  ctaText = "Return to Home",
  comingSoon = true,
} = Astro.props;
---

<div class="placeholder-wrapper">
  <div class="content-container">
    <h1>{title}</h1>
    {comingSoon && <div class="coming-soon-badge">Coming Soon</div>}
    <p class="subtitle">{subtitle}</p>
    <p class="description">{description}</p>
    <a href={ctaLink} class="cta-button">{ctaText}</a>
  </div>
</div>

<style>
  .placeholder-wrapper {
    padding: 6rem 2rem;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(to right, #f8f6f0 0%, #ffffff 100%);
  }

  .content-container {
    max-width: 800px;
    text-align: center;
    padding: 3rem;
    background-color: white;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    position: relative;
    overflow: hidden;
  }

  h1 {
    color: #003087;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    position: relative;
    display: inline-block;
  }

  h1:after {
    content: "";
    position: absolute;
    bottom: -10px;
    left: 25%;
    width: 50%;
    height: 3px;
    background: #cc9933;
    border-radius: 2px;
  }

  .coming-soon-badge {
    background: #cc9933;
    color: white;
    font-weight: 600;
    padding: 0.5rem 1.5rem;
    border-radius: 30px;
    display: inline-block;
    margin-bottom: 1.5rem;
    font-size: 0.9rem;
    letter-spacing: 0.5px;
    box-shadow: 0 3px 10px rgba(204, 153, 51, 0.2);
  }

  .subtitle {
    color: #003087;
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .description {
    color: #515151;
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-button {
    display: inline-block;
    background: #003087;
    color: white;
    padding: 0.8rem 2rem;
    border-radius: 50px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 2px solid #003087;
  }

  .cta-button:hover {
    background: white;
    color: #003087;
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0, 48, 135, 0.2);
  }

  @media (max-width: 768px) {
    .placeholder-wrapper {
      padding: 4rem 1rem;
    }

    .content-container {
      padding: 2rem 1.5rem;
    }

    h1 {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1.2rem;
    }
  }
</style>
