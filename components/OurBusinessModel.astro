<script>
  // Add hover effects for stakeholder cards
  document.addEventListener("DOMContentLoaded", function () {
    const stakeholderCards = document.querySelectorAll(".stakeholder-card");
    const hub = document.querySelector(".hub-content");

    stakeholderCards.forEach((card) => {
      card.addEventListener("mouseenter", function () {
        // Highlight the hub when hovering over a stakeholder
        hub.style.borderColor = "#cc9933";
        hub.style.boxShadow = "0 0 30px rgba(204, 153, 51, 0.3)";
        this.style.zIndex = "20";
      });

      card.addEventListener("mouseleave", function () {
        // Reset hub styling
        hub.style.borderColor = "#cc9933";
        hub.style.boxShadow = "";
        this.style.zIndex = "5";
      });
    });

    // Optional: Add a subtle animation effect for the connections
    const connections = document.querySelectorAll(".connection");
    connections.forEach((connection) => {
      setInterval(() => {
        connection.style.opacity = "0.2";
        setTimeout(() => {
          connection.style.opacity = "0.5";
        }, 1500);
      }, 3000);
    });
  });
</script>
