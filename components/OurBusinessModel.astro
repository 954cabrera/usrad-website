<style>
  /* Base Section Styling */
  .business-model-section {
    padding: 6rem 0;
    position: relative;
    overflow: hidden;
  }

  /* Heading Section */
  .heading-section {
    text-align: center;
    margin-bottom: 5rem;
  }

  /* Decorative Elements */
  .decorative-element {
    position: absolute;
    border-radius: 50%;
    z-index: -1;
  }

  .element-1 {
    width: 400px;
    height: 400px;
    background: radial-gradient(
      circle,
      rgba(204, 153, 51, 0.05) 0%,
      rgba(204, 153, 51, 0.01) 70%
    );
    top: 5%;
    right: -100px;
  }

  .element-2 {
    width: 300px;
    height: 300px;
    background: radial-gradient(
      circle,
      rgba(0, 48, 135, 0.05) 0%,
      rgba(0, 48, 135, 0.01) 70%
    );
    bottom: 15%;
    left: -50px;
  }

  .element-3 {
    width: 200px;
    height: 200px;
    background: radial-gradient(
      circle,
      rgba(204, 153, 51, 0.03) 0%,
      rgba(204, 153, 51, 0.01) 70%
    );
    top: 40%;
    left: 20%;
  }

  /* Hub Diagram */
  .hub-diagram {
    position: relative;
    margin: 6rem auto;
    height: 700px;
    max-width: 1000px;
  }

  /* Hub Styling */
  .hub {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 10;
  }

  .hub-content {
    width: 220px;
    height: 220px;
    background-color: white;
    border: 4px solid #cc9933;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    animation: pulse 3s infinite;
  }

  @keyframes pulse {
    0% {
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    }
    50% {
      box-shadow: 0 12px 40px rgba(204, 153, 51, 0.2);
    }
    100% {
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    }
  }

  .hub-icon {
    background-color: #003087;
    width: 70px;
    height: 70px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .hub-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #003087;
    margin-bottom: 0.25rem;
  }

  .hub-subtitle {
    font-size: 0.875rem;
    color: #003087;
  }

  /* Connection Lines */
  .connection-lines {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 5;
  }

  .connection {
    position: absolute;
    background: linear-gradient(
      90deg,
      rgba(204, 153, 51, 0.05),
      rgba(204, 153, 51, 0.3),
      rgba(204, 153, 51, 0.05)
    );
    animation: shimmer 3s infinite;
  }

  @keyframes shimmer {
    0% {
      opacity: 0.2;
    }
    50% {
      opacity: 0.5;
    }
    100% {
      opacity: 0.2;
    }
  }

  .top-line {
    top: 0;
    left: 50%;
    width: 2px;
    height: 35%;
    transform: translateX(-50%);
  }

  .right-line {
    top: 50%;
    right: 0;
    width: 32%;
    height: 2px;
    transform: translateY(-50%);
  }

  .bottom-line {
    bottom: 0;
    left: 50%;
    width: 2px;
    height: 35%;
    transform: translateX(-50%);
  }

  .left-line {
    top: 50%;
    left: 0;
    width: 32%;
    height: 2px;
    transform: translateY(-50%);
  }

  /* Stakeholder Styling */
  .stakeholder {
    position: absolute;
    z-index: 5;
  }

  .stakeholder-top {
    top: 0;
    left: 50%;
    transform: translateX(-50%);
  }

  .stakeholder-right {
    top: 50%;
    right: 0;
    transform: translateY(-50%);
  }

  .stakeholder-bottom {
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
  }

  .stakeholder-left {
    top: 50%;
    left: 0;
    transform: translateY(-50%);
  }

  .stakeholder-card {
    width: 280px;
    background-color: white;
    border-radius: 1rem;
    padding: 1.5rem;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.4s ease;
  }

  .stakeholder-top .stakeholder-card {
    border-top: 4px solid #cc9933;
  }

  .stakeholder-right .stakeholder-card {
    border-right: 4px solid #cc9933;
  }

  .stakeholder-bottom .stakeholder-card {
    border-bottom: 4px solid #cc9933;
  }

  .stakeholder-left .stakeholder-card {
    border-left: 4px solid #cc9933;
  }

  .stakeholder-card:hover {
    transform: scale(1.05);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.12);
    z-index: 20;
  }

  .stakeholder-icon {
    width: 48px;
    height: 48px;
    background-color: #003087;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .stakeholder-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #003087;
    margin-bottom: 1rem;
  }

  .stakeholder-benefits {
    list-style-type: none;
    padding: 0;
    margin: 0;
    space-y: 0.75rem;
  }

  .stakeholder-benefits li {
    display: flex;
    align-items: flex-start;
    margin-bottom: 0.75rem;
