---
// CondensedTrustIndicators.astro
---

<div class="trust-indicators-section">
  <div class="container">
    <div class="trust-header">
      <div class="badge-container">
        <div class="quality-badge">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="badge-icon"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span class="badge-text">INDUSTRY STANDARD</span>
        </div>
      </div>

      <h2 class="section-title">
        <span class="title-bar"></span>
        Advanced Imaging Technology You Can Trust
      </h2>

      <p class="section-description">
        Our network utilizes state-of-the-art equipment from leading
        manufacturers, ensuring exceptional image quality for accurate
        diagnostics.
      </p>
    </div>

    <div class="manufacturer-logos">
      <div class="logo-container">
        <img
          src="/images/manufacturers/ge.svg"
          alt="GE Healthcare"
          class="manufacturer-logo"
        />
      </div>
      <div class="logo-container">
        <img
          src="/images/manufacturers/siemens.svg"
          alt="Siemens"
          class="manufacturer-logo"
        />
      </div>
      <div class="logo-container">
        <img
          src="/images/manufacturers/philips.svg"
          alt="Philips"
          class="manufacturer-logo"
        />
      </div>
      <div class="logo-container">
        <img
          src="/images/manufacturers/canon.svg"
          alt="Canon Medical"
          class="manufacturer-logo"
        />
      </div>
      <div class="logo-container">
        <img
          src="/images/manufacturers/hitachi.svg"
          alt="Hitachi"
          class="manufacturer-logo"
        />
      </div>
    </div>

    <div class="trust-footer">
      <div class="quality-points">
        <div class="quality-point">
          <div class="point-icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <span class="point-text">Regular Calibration</span>
        </div>

        <div class="quality-point">
          <div class="point-icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <span class="point-text">Certified Technicians</span>
        </div>

        <div class="quality-point">
          <div class="point-icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <span class="point-text">Quality Assurance Protocols</span>
        </div>
      </div>

      <a href="/technology" class="learn-more-link">
        Learn About Our Technology
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="link-icon"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H3a1 1 0 110-2h9.586l-2.293-2.293a1 1 0 010-1.414z"
            clip-rule="evenodd"></path>
        </svg>
      </a>
    </div>
  </div>
</div>

<style>
  .trust-indicators-section {
    padding: 4rem 0;
    background-color: white;
    position: relative;
    overflow: hidden;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    position: relative;
    z-index: 10;
  }

  .trust-header {
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
  }

  .badge-container {
    position: relative;
    height: 40px;
    margin-bottom: 1rem;
  }

  .quality-badge {
    position: absolute;
    top: -10px;
    right: 50%;
    transform: translateX(140px) rotate(5deg);
    background-color: white;
    border: 2px solid #cc9933;
    border-radius: 9999px;
    padding: 0.5rem 1rem;
    display: flex;
    align-items: center;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .badge-icon {
    width: 20px;
    height: 20px;
    color: #003087;
    margin-right: 0.5rem;
  }

  .badge-text {
    font-size: 0.75rem;
    font-weight: 700;
    color: #003087;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 600;
    color: #003087;
    margin-bottom: 1rem;
    display: inline-flex;
    align-items: center;
  }

  .title-bar {
    width: 0.5rem;
    height: 2.5rem;
    background-color: #cc9933;
    border-radius: 9999px;
    margin-right: 0.75rem;
  }

  .section-description {
    font-size: 1.25rem;
    color: #003087;
    max-width: 700px;
    margin: 0 auto;
  }

  .manufacturer-logos {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .logo-container {
    background-color: white;
    padding: 1rem;
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease-in-out;
  }

  .logo-container:hover {
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
    transform: translateY(-5px);
  }

  .manufacturer-logo {
    height: 36px;
    max-width: 100px;
    transition: all 0.3s ease-in-out;
    filter: grayscale(100%);
    opacity: 0.7;
  }

  .logo-container:hover .manufacturer-logo {
    filter: grayscale(0%);
    opacity: 1;
  }

  .trust-footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .quality-points {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .quality-point {
    display: flex;
    align-items: center;
    background-color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 9999px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
  }

  .point-icon {
    width: 24px;
    height: 24px;
    background-color: rgba(204, 153, 51, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 0.75rem;
    color: #cc9933;
  }

  .point-text {
    font-size: 0.875rem;
    font-weight: 500;
    color: #003087;
  }

  .learn-more-link {
    display: inline-flex;
    align-items: center;
    color: #003087;
    font-weight: 600;
    padding: 0.75rem 1.5rem;
    border-radius: 9999px;
    background-color: rgba(204, 153, 51, 0.1);
    transition: all 0.3s ease;
  }

  .learn-more-link:hover {
    background-color: rgba(204, 153, 51, 0.2);
    transform: translateX(5px);
  }

  .link-icon {
    width: 20px;
    height: 20px;
    margin-left: 0.5rem;
  }

  @media (max-width: 768px) {
    .quality-badge {
      position: relative;
      top: 0;
      right: auto;
      transform: none;
      display: inline-flex;
      margin-bottom: 1rem;
    }

    .badge-container {
      height: auto;
      display: flex;
      justify-content: center;
    }

    .section-title {
      font-size: 2rem;
    }

    .manufacturer-logos {
      gap: 1rem;
    }

    .quality-points {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
