---
import ClarityMark from "../components/ClarityMark.astro";
---

<header class="navbar">
  <div class="navbar-inner">
    <!-- Left: Logo -->
    <div class="flex items-center">
      <a href="/" class="brand">
        <img src="/logo/USRad-Logo-final.png" alt="USRad Logo" class="logo" />
      </a>
    </div>

    <!-- Center: Navigation Links -->
    <div class="hidden md:flex justify-center">
      <nav class="nav-links flex gap-6">
        <ClarityMark as="a" href="/" className="nav-link" />
        <a href="/about" class="nav-link">About</a>
        <a href="/partner" class="nav-link">Partner</a>
        <a href="/locations" class="nav-link">Pricing</a>
        <a href="/faq" class="nav-link">FAQ</a>
        <a href="/contact" class="nav-link">Contact</a>
      </nav>
    </div>

    <!-- Right: Login -->
    <div class="hidden md:flex justify-end">
      <a href="/login" class="nav-link">Login</a>
    </div>

    <!-- Mobile Nav -->
    <details class="nav-mobile md:hidden ml-auto">
      <summary class="hamburger">â˜°</summary>
      <div class="dropdown">
        <a href="/about">About</a>
        <a href="/partner">Partner</a>
        <a href="/locations">Pricing</a>
        <a href="/faq">FAQ</a>
        <a href="/contact">Contact</a>
        <a href="/login">Login</a>
      </div>
    </details>
  </div>
</header>

<style>
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 50;
    background: linear-gradient(to right, #f5e7c5 0%, #ffffff 100%);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    transition:
      background 0.3s ease,
      box-shadow 0.3s ease;
    box-shadow: none;
    border-bottom: none;
  }

  .navbar-inner {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    max-width: 1280px;
    margin: 0 auto;
    padding: 1.5rem 2rem;
    width: 100%;
  }

  .brand .logo {
    height: 56px;
    max-height: 56px;
    object-fit: contain;
  }

  .nav-link {
    position: relative;
    display: inline-block;
    color: #0e1b2a;
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.03em;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .nav-link::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 100%;
    height: 2px;
    background-color: #e6c378;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease;
  }

  .nav-link:hover {
    color: #e6c378;
  }

  .nav-link:hover::after {
    transform: scaleX(1);
  }

  .nav-mobile summary {
    list-style: none;
    cursor: pointer;
    color: #0e1b2a;
    font-size: 1.5rem;
  }

  .nav-mobile .dropdown {
    display: flex;
    flex-direction: column;
    background: #ffffff;
    border-top: 1px solid #f1f5f9;
    padding: 1rem 0;
  }

  .nav-mobile .dropdown a {
    padding: 0.5rem 1rem;
    color: #0e1b2a;
    text-decoration: none;
  }

  .nav-mobile .dropdown a:hover {
    color: #e6c378;
  }

  @media (min-width: 768px) {
    .nav-mobile {
      display: none;
    }
  }
</style>
