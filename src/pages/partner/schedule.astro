---
// components/partner/ConsultationForm.astro
const { simplified = false } = Astro.props;
---

<form class="space-y-4" action="/api/schedule-consultation" method="post">
  <div>
    <label
      for="name"
      class={`block text-sm font-medium text-gray-700 mb-1 ${simplified ? "sr-only" : ""} font-manrope`}
      >Your Name</label
    >
    <input
      type="text"
      id="name"
      name="name"
      class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#cc9933] focus:border-transparent font-manrope"
      placeholder="Your Name"
      required
    />
  </div>

  <div>
    <label
      for="email"
      class={`block text-sm font-medium text-gray-700 mb-1 ${simplified ? "sr-only" : ""} font-manrope`}
      >Work Email</label
    >
    <input
      type="email"
      id="email"
      name="email"
      class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#cc9933] focus:border-transparent font-manrope"
      placeholder="Work Email"
      required
    />
  </div>

  <div>
    <label
      for="facility"
      class={`block text-sm font-medium text-gray-700 mb-1 ${simplified ? "sr-only" : ""} font-manrope`}
      >Facility Name</label
    >
    <input
      type="text"
      id="facility"
      name="facility"
      class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#cc9933] focus:border-transparent font-manrope"
      placeholder="Facility Name"
      required
    />
  </div>

  {
    !simplified && (
      <div>
        <label
          for="locations"
          class="block text-sm font-medium text-gray-700 mb-1 font-manrope"
        >
          Number of Locations
        </label>
        <select
          id="locations"
          name="locations"
          class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#cc9933] focus:border-transparent font-manrope"
        >
          <option value="1">1 Location</option>
          <option value="2-5">2-5 Locations</option>
          <option value="6-10">6-10 Locations</option>
          <option value="11-25">11-25 Locations</option>
          <option value="26+">26+ Locations</option>
        </select>
      </div>
    )
  }

  {
    !simplified && (
      <div>
        <label
          for="message"
          class="block text-sm font-medium text-gray-700 mb-1 font-manrope"
        >
          Additional Information
        </label>
        <textarea
          id="message"
          name="message"
          rows="3"
          class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#cc9933] focus:border-transparent font-manrope"
          placeholder="Tell us about your imaging center and any specific questions"
        />
      </div>
    )
  }

  <div>
    <button
      type="submit"
      class="w-full px-6 py-3 bg-[#003087] text-white font-bold rounded-lg hover:bg-[#002266] transition-all duration-300 border border-transparent hover:border-[#cc9933] font-manrope"
    >
      {simplified ? "Request Information" : "Schedule Consultation"}
    </button>
  </div>

  <p class="text-xs text-gray-500 text-center font-manrope">
    By submitting, you'll receive information about the USRad partner network.
    No obligation.
  </p>
</form>
