---
const authToken = process.env.AUTH_TOKEN;
const tokenExists = !!authToken;
const tokenValue = authToken ? authToken.substring(0, 3) + "..." : "Not Set";
---

<!DOCTYPE html>
<html>
<head>
  <title>Environment Check</title>
  <style>
    body { font-family: sans-serif; padding: 2rem; }
    .success { color: green; font-weight: bold; }
    .error { color: red; font-weight: bold; }
  </style>
</head>
<body>
  <h1>Environment Variables Check</h1>
  
  <div>
    <h2>AUTH_TOKEN:</h2>
    {tokenExists ? 
      <p class="success">✅ AUTH_TOKEN is set (starts with: {tokenValue})</p> : 
      <p class="error">❌ AUTH_TOKEN is NOT set!</p>
    }
  </div>
  
  <h2>All Environment Variables:</h2>
  <pre>{JSON.stringify(process.env, (key, value) => {
    // Mask sensitive values
    if (key && typeof value === 'string' && value.length > 3) {
      return value.substring(0, 3) + "...";
    }
    return value;
  }, 2)}</pre>
</body>
</html>